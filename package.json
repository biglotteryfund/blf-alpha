{
  "name": "biglotteryfund",
  "description": "The National Lottery Community Fund website",
  "version": "1.0.0",
  "private": true,
  "config": {
    "dist": {
      "root": "public/build",
      "css": "public/build/latest/stylesheets",
      "js": "public/build/latest/javascripts"
    }
  },
  "scripts": {
    "start": "node ./bin/www",
    "startDev": "export DEBUG=tnlcf:*; nodemon --inspect ./bin/www",
    "start-test": "./bin/start-test-server",
    "lint": "eslint . --ext .js,.vue",
    "format": "prettier --write **/*.{js,scss,vue}",
    "test-unit": "jest --maxWorkers=4",
    "test-watch": "jest --watch",
    "test": "npm audit || true && npm run lint && npm run test-unit",
    "test-integration": "npm run start-test & wait-on http://localhost:8090 && percy exec -- cypress run",
    "test-ci": "concurrently --raw npm:test-unit npm:test-integration",
    "clean": "del-cli $npm_package_config_dist_root/* ./config/assets.json",
    "build-sass": "node-sass assets/sass --output $npm_package_config_dist_css --source-map $npm_package_config_dist_css",
    "build-css": "npm run build-sass && postcss $npm_package_config_dist_css/*.css --replace --map",
    "build-js": "webpack",
    "build": "npm run clean && concurrently --raw npm:build-css npm:build-js",
    "build-production": "export NODE_ENV=production && npm run build && ./bin/hash-rev",
    "build-autotrack": "npx autotrack -o public/autotrack/autotrack.js -p outboundLinkTracker,eventTracker",
    "watch-js": "webpack --watch",
    "watch-css": "sane 'npm run build-css' assets/sass --glob='**/*.scss'",
    "watch": "concurrently --kill-others npm:watch-js npm:watch-css"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.vue$": "vue-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "quoteProps": "consistent"
  },
  "browserslist": [
    ">0.25% in GB",
    "ie >= 10",
    "not op_mini all"
  ],
  "eslintIgnore": [
    "public/",
    "views/",
    "coverage/"
  ],
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "assets",
      "public"
    ],
    "ext": "js,json,yml"
  },
  "dependencies": {
    "aws-sdk": "2.295.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "config": "3.0.1",
    "connect-session-sequelize": "^5.2.0",
    "connect-slashes": "^1.3.1",
    "cookie-parser": "~1.4.3",
    "csurf": "^1.9.0",
    "debug": "4.1.1",
    "details-element-polyfill": "2.2.0",
    "dictionary-cy-gb": "1.0.0",
    "dictionary-en-gb": "2.0.0",
    "dompurify": "^1.0.3",
    "express": "^4.16.3",
    "express-cache-controller": "^1.0.1",
    "express-session": "^1.15.5",
    "express-validator": "^5.0.0",
    "faker": "4.1.0",
    "fitvids": "^2.0.0",
    "fontfaceobserver": "^2.0.13",
    "globby": "9.2.0",
    "helmet": "^3.8.1",
    "html-pdf": "2.2.0",
    "html-to-text": "4.0.0",
    "i18n-2": "^0.7.2",
    "joi": "14.3.1",
    "joi-phone-number": "2.1.1",
    "jquery": "^3.2.1",
    "js-yaml": "3.13.0",
    "jsdom": "^11.5.1",
    "jsonwebtoken": "^8.3.0",
    "juice": "^4.2.2",
    "lodash": "4.17.11",
    "moment": "^2.18.1",
    "morgan": "1.9.1",
    "ms": "^2.1.1",
    "mysql2": "^1.4.2",
    "nodemailer": "^4.1.0",
    "nspell": "2.1.0",
    "nunjucks": "^3.1.3",
    "passport": "^0.4.0",
    "passport-azure-ad": "4.0.0",
    "passport-local": "^1.0.0",
    "query-string": "^5.0.1",
    "raven": "2.6.4",
    "raven-js": "3.27.0",
    "request": "^2.84.0",
    "request-promise-native": "^1.0.5",
    "sequelize": "4.38.0",
    "serve-favicon": "^2.5.0",
    "sitemap": "^1.13.0",
    "slugify": "^1.2.1",
    "sqlite3": "4.0.2",
    "uuid": "^3.2.1",
    "vary": "^1.1.1",
    "vue": "2.5.17",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.1.5",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/preset-env": "7.1.5",
    "@percy/cypress": "1.0.5",
    "@vue/test-utils": "1.0.0-beta.25",
    "autoprefixer": "9.4.2",
    "axe-core": "3.2.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.4",
    "babel-plugin-lodash": "3.3.4",
    "browser-sync": "2.26.3",
    "concurrently": "4.1.0",
    "css-loader": "2.0.0",
    "cssnano": "4.1.7",
    "cypress": "3.2.0",
    "cypress-file-upload": "3.1.1",
    "cypress-testing-library": "3.0.1",
    "del-cli": "1.1.0",
    "dotenv": "8.0.0",
    "eslint": "5.16.0",
    "eslint-plugin-compat": "3.1.1",
    "eslint-plugin-no-only-tests": "2.3.0",
    "eslint-plugin-vue": "5.2.2",
    "husky": "2.2.0",
    "jest": "24.8.0",
    "jest-serializer-html": "7.0.0",
    "node-mocks-http": "1.7.5",
    "node-sass": "4.11.0",
    "nodemon": "1.18.9",
    "postcss-cli": "6.0.1",
    "postcss-fout-with-a-class": "1.1.0",
    "prettier": "1.17.0",
    "prompt": "1.0.0",
    "sane": "4.0.2",
    "vue-jest": "3.0.4",
    "vue-loader": "15.4.2",
    "vue-template-compiler": "2.5.17",
    "wait-on": "3.2.0",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2"
  }
}
