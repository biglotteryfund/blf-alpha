{
  "name": "biglotteryfund",
  "description": "The National Lottery Community Fund website",
  "version": "1.0.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "private": true,
  "config": {
    "dist": {
      "root": "public/build",
      "css": "public/build/latest/stylesheets",
      "js": "public/build/latest/javascripts"
    }
  },
  "scripts": {
    "start": "node ./bin/www",
    "start-dev": "nodemon --inspect ./bin/www",
    "start-test": "DB_CONNECTION_URI=sqlite://:memory PORT=8090 TEST_SERVER=true npm run start",
    "lint": "eslint . bin/* --ext .js,.vue && stylelint assets/sass",
    "format": "prettier --write . bin/*",
    "test-unit": "jest --maxWorkers=4",
    "test": "npm run lint && npm run test-unit",
    "test-integration": "npm run start-test & wait-on http://localhost:8090 && npx cypress run --browser chrome",
    "clean": "del-cli public/build/* ./config/assets.json",
    "build-css-style": "node-sass assets/sass/style.scss --output public/build/latest/stylesheets --source-map public/build/latest/stylesheets && postcss public/build/latest/stylesheets/style.css --replace --map",
    "build-css-emails": "node-sass assets/sass/emails.scss | postcss --no-map -u autoprefixer > public/build/latest/stylesheets/emails.css",
    "build-css": "npm run build-css-style && npm run build-css-emails",
    "build-js": "webpack",
    "build": "npm run clean && npm run build-css && npm run build-js",
    "build-production": "export NODE_ENV=production && npm run build && ./bin/hash-rev",
    "build-autotrack": "npx autotrack -o public/autotrack/autotrack.js -p outboundLinkTracker,eventTracker",
    "watch-tests": "jest --watch --notify",
    "watch-js": "webpack --watch",
    "watch-css": "sane 'npm run build-css' assets/sass --glob='**/*.scss'",
    "watch": "concurrently --kill-others npm:watch-js npm:watch-css"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.vue$": "vue-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "quoteProps": "consistent"
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-recommended",
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "no-descending-specificity": null
    }
  },
  "browserslist": [
    ">0.25% in GB",
    "ie >= 10",
    "not op_mini all"
  ],
  "eslintIgnore": [
    "public/",
    "coverage/"
  ],
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "assets",
      "public"
    ],
    "ext": "js,json,yml"
  },
  "dependencies": {
    "@hapi/joi": "15.1.1",
    "@hapi/joiNext": "npm:@hapi/joi@17.1.1",
    "@ideal-postcodes/core-node": "1.3.0",
    "@sentry/browser": "5.15.5",
    "@sentry/integrations": "5.15.5",
    "@sentry/node": "5.15.5",
    "aws-sdk": "2.667.0",
    "bcryptjs": "^2.4.3",
    "clamscan": "1.2.0",
    "common-tags": "1.8.0",
    "config": "3.3.1",
    "connect-session-sequelize": "6.0.0",
    "connect-slashes": "^1.4.0",
    "csurf": "^1.11.0",
    "dompurify": "2.0.8",
    "express": "4.17.1",
    "express-cache-controller": "^1.0.1",
    "express-session": "1.17.1",
    "faker": "4.1.0",
    "filesize": "6.1.0",
    "fitvids": "^2.1.1",
    "formidable": "1.2.2",
    "globby": "11.0.0",
    "google-libphonenumber": "3.2.9",
    "got": "10.7.0",
    "helmet": "3.22.0",
    "html-to-text": "5.1.1",
    "i18n-2": "^0.7.3",
    "js-yaml": "3.13.1",
    "jsdom": "16.2.2",
    "json2csv": "5.0.1",
    "jsonwebtoken": "^8.5.1",
    "juice": "^4.2.2",
    "lodash": "4.17.15",
    "mime-types": "2.1.27",
    "moment": "^2.18.1",
    "moment-timezone": "0.5.28",
    "mysql2": "1.6.5",
    "nodemailer": "^4.1.0",
    "nunjucks": "^3.2.1",
    "passport": "^0.4.1",
    "passport-azure-ad": "4.2.1",
    "passport-local": "^1.0.0",
    "postcode": "2.0.0",
    "rate-limiter-flexible": "1.1.6",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "sequelize": "5.21.7",
    "serve-favicon": "^2.5.0",
    "sitemap": "^4.0.2",
    "slugify": "^1.4.0",
    "uuid": "^3.4.0",
    "vary": "^1.1.1",
    "winston": "3.2.1",
    "winston-cloudwatch": "2.3.2",
    "yargs": "^15.3.1",
    "zxcvbn": "4.4.2"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.9.6",
    "@testing-library/cypress": "6.0.0",
    "@vue/test-utils": "1.0.0-beta.33",
    "autoprefixer": "9.7.6",
    "axe-core": "3.5.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.5.1",
    "babel-loader": "8.0.6",
    "concurrently": "5.2.0",
    "core-js": "3.6.5",
    "cross-env": "7.0.2",
    "css-loader": "3.5.3",
    "cssnano": "4.1.10",
    "cypress": "4.5.0",
    "cypress-file-upload": "4.0.6",
    "del-cli": "3.0.0",
    "details-element-polyfill": "2.4.0",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "eslint-plugin-compat": "3.5.1",
    "eslint-plugin-lodash": "7.1.0",
    "eslint-plugin-no-only-tests": "2.4.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-vue": "6.2.2",
    "fontfaceobserver": "2.1.0",
    "jest": "25.5.3",
    "jest-serializer-html": "7.0.0",
    "jquery": "^3.5.0",
    "node-mocks-http": "1.8.1",
    "node-notifier": "7.0.0",
    "node-sass": "4.14.0",
    "nodemon": "2.0.3",
    "picturefill": "3.0.3",
    "postcss-cli": "7.1.1",
    "postcss-foft-classes": "1.0.4",
    "prettier": "2.0.5",
    "prompt": "1.0.0",
    "query-string": "^5.0.1",
    "sane": "4.1.0",
    "sequelize-cli": "5.5.1",
    "sqlite3": "4.2.0",
    "stylelint": "13.3.3",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-scss": "3.17.1",
    "vue": "2.6.11",
    "vue-i18n": "8.16.0",
    "vue-jest": "3.0.5",
    "vue-loader": "15.9.1",
    "vue-template-compiler": "2.6.11",
    "wait-on": "4.0.2",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  }
}
