{% macro listErrors(errors) %}
    {% if errors and errors.length > 0 %}
        <div class="alert alert-danger" role="alert">
            {% set numErrs = errors.length %}
            <p><strong>There w{{ numErrs | pluralise("as", "ere") }} {{ numErrs }} error{{ numErrs | pluralise("", "s") }}:</strong></p>
            <ul>
                {% for e in errors %}
                    <li>{{ e.msg | safe }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endmacro %}

{% macro userInfoPanel(user) %}
    {% if user %}
        <div class="u-tone-background-tint u-padded u-margin-bottom">
            <p>Logged in as <strong>{{ user.userData.username }}</strong></p>
            <p class="u-no-margin"><a class="btn btn--small btn--outline" href="/user/logout" data-testid="logout-button">Log out</a></p>
        </div>
        {% if user.userType === 'user' and not user.userData.is_active %}
            <div class="message" role="alert">
                <p>You haven't activated your account yet.</p>
                <p>Would you like to <a href="/user/activate">re-send your activation link</a>?</p>
            </div>
        {% endif %}
    {% endif %}
{% endmacro %}
