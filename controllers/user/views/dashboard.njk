{% extends "layouts/main.njk" %}
{% from "components/section-links/macro.njk" import sectionLinks %}
{% from "components/breadcrumb-trail/macro.njk" import breadcrumbTrail %}
{% from "components/user-status/macro.njk" import userStatus with context %}

{% set title = 'Your account' %}

{% block content %}
    <main role="main" id="content">
        <div class="content-box u-inner-wide-only">
            {{ breadcrumbTrail(breadcrumbs) }}

            {{ userStatus(user) }}

            <h1 class="t--underline">{{ title }}</h1>

            {% if alertMessage %}
                <div class="message" role="alert">
                    {{ alertMessage }}
                </div>
            {% endif %}

            <div class="u-margin-bottom">
                {{ sectionLinks(copy.sectionLinks) }}
            </div>
        </div>
    </main>
{% endblock %}
