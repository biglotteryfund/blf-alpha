{% extends "controllers/tools/views/layout.njk" %}

{% block title %}Your account{% endblock %}

{% block content %}
    {% if not user.is_active %}
        <div class="alert alert-warning" role="alert">
            <p><strong>Warning:</strong> You haven't activated your account yet!</p>
            {% if activationSent %}
                <p><strong>We just sent an email to {{ user.username }} with a link to activate your account.</strong></p>
            {% endif %}
            <p>Would you like to <a href="/user/activate">re-send your activation link</a>?</p>
        </div>
    {% endif %}

    <h1>Dashboard</h1>
    <p>Logged in as <strong>{{ user.username }}</strong>.</p>
{% endblock %}
