{% extends "layouts/main.njk" %}
{% from "components/form-fields/macros.njk" import formErrors, formField with context %}
{% from "components/breadcrumb-trail/macro.njk" import breadcrumbTrail %}
{% from "components/user-status/macro.njk" import userStatus with context %}

{% set title = 'Reset your password' %}

{% block content %}
    <main role="main" id="content">
        <div class="content-box u-inner-wide-only">
            {{ breadcrumbTrail(breadcrumbs) }}
            {{ userStatus(user) }}

            <h1 class="t--underline">{{ title }}</h1>

            <p>Please choose a new password for your account by entering it below. Ensure you choose a strong password.</p>

            {% if alertMessage %}
                <div class="message" role="alert">
                    {{ alertMessage | safe }}
                </div>
            {% endif %}

            <form action="" method="post" autocomplete="off">
                {{ formErrors(errors = errors, title = "There was a problem with your submission") }}

                {% if csrfToken %}
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                {% endif %}

                {% if token %}
                    <input type="hidden" name="token" value="{{ token }}">
                {% endif %}

                {% if user %}
                    {{ formField({
                        type: 'password',
                        name: 'password-old',
                        label: 'Your old password',
                        isRequired: true
                    }, errors = errors) }}
                {% endif %}

                {{ formField({
                    type: 'password',
                    name: 'password',
                    label: 'Your new password',
                    isRequired: true
                }, errors = errors) }}

                <div class="form-actions">
                    <input type="submit" class="btn" value="Reset password" />
                </div>
            </form>
        </div>
    </main>
{% endblock %}
