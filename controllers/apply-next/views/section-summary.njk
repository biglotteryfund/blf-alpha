{% from "components/content-box/macro.njk" import contentBox %}
{% from "components/form-header/macro.njk" import formHeader with context %}
{% from "components/breadcrumb-trail/macro.njk" import breadcrumbTrail %}

{% extends "layouts/main.njk" %}

{% block content %}
    <main role="main" id="content">
        <div class="content-box u-inner-wide-only">
            {{ formHeader(
                title = formTitle
            ) }}

            {{ breadcrumbTrail(breadcrumbs) }}

            {{ section.summary | safe }}

            <p>
                <a class="btn" href="{{ nextUrl }}">Continue</a>
            </p>
        </div>
    </main>
{% endblock %}
