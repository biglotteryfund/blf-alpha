{% extends "layouts/main.njk" %}
{% from "components/page-title/macro.njk" import pageTitle %}


{% set copy = __('global.cookiePolicy') %}
{% set navCopy = __('global.nav') %}


{% block content %}
    <main role="main" id="content">
        {{ pageTitle(title) }}

        <section class="content-box u-inner-wide-only" id="item-1">
            <ol class="u-dont-print breadcrumb-trail breadcrumb-trail--flush">
                <li class="breadcrumb-trail__item"><a class="breadcrumb-trail__link" href="/about">{{navCopy.about}}</a></li>
                <li class="breadcrumb-trail__item">{{ copy.title }}</li>
            </ol>

            <div class="s-prose">
            {{ copy.intro | safe}}
                <h2>{{copy.necessaryCookies.title}}</h2>
                {{copy.necessaryCookies.description | safe}}

                <h2>{{copy.websiteUse.title}}</h2>
                {{copy.websiteUse.description | safe}}

                 <table class="table table-sm table-striped preview-table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Expiry</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cookie in __("global.cookiePolicy.cookieList") %}
                            <tr>
                                <td>{{cookie.name}}</td>
                                <td>{{cookie.expiry}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                {% set cookieLang = __('global.cookiePolicy') %}
                <div id="js-cookie-policy-select">
                    <cookie-policy-select
                        actionsave='{{ cookieLang.actionSave }}'
                        actionsuccess='{{ cookieLang.actionSuccess }}'
                        messageall='{{ cookieLang.messageAll }}'
                        messageessential='{{ cookieLang.messageEssential }}'
                    ></cookie-policy-select>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
