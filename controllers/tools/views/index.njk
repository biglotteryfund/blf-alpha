{% extends "layouts/main.njk" %}
{% from "components/section-links/macro.njk" import sectionLinks %}
{% from "components/user-status/macro.njk" import userStatus with context %}

{% set title = 'Staff tools' %}
{% set bodyClass = 'has-static-header' %}

{% block content %}
    <main role="main" id="content">
        <div class="content-box u-inner-wide-only">
            {{ userStatus(user) }}

            <h1 class="t--underline">{{ title }}</h1>

            {{ sectionLinks([{
                href: '/tools/survey-results',
                label: 'Site satisfaction survey results'
            }, {
                href: '/tools/feedback-results',
                label: 'Page feedback survey responses'
            }, {
                href: '/tools/order-stats',
                label: 'Statistics on recent material orders'
            }]) }}
        </div>
    </main>
{% endblock %}
