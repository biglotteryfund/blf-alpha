{% from "components/hero.njk" import hero %}
{% from "components/icons.njk" import iconTick %}
{% from "components/form-fields.njk" import formHeader, formErrors, formField with context %}

{% extends "layouts/main.njk" %}

{% set stepProgressDescription = "Step " + stepProgress.currentStepNumber + " of " + stepProgress.totalSteps %}
{% block title %} {{ stepProgressDescription }} | {{ formTitle }} | {% endblock %}

{% if not heroImage %}
    {% set bodyClass = 'has-static-header' %}
{% endif %}

{% block content %}
    <main role="main" id="content">

        {% if heroImage %}
            {{ hero(
                titleText = form.title,
                image = heroImage,
                accent = pageAccent
            ) }}
        {% endif %}

        <form action="" method="POST"
            class="js-application-form content-box u-inner-wide-only accent--{{ pageAccent }} a--border-top{% if heroImage %} nudge-up{% endif %}">

            {{ formHeader(
                title = formTitle,
                prefix = stepProgressDescription,
                backUrl = stepProgress.prevStepUrl
            ) }}

            {% set description = copy.description or form.description %}
            {% if description %}
                <p>{{ description | safe }}</p>
            {% endif %}

            {% set errorTitle = copy.errorTitle | default('There was a problem with your submission', true) %}
            {{ formErrors(errors = errors, title = errorTitle) }}

            <h2>{{ stepCopy.name or step.name }}</h2>

            {% for fieldset in step.fieldsets %}
                {% set fieldsetCopy = stepCopy.fieldsets[loop.index0] %}
                <fieldset class="form-fieldset u-constrained-wide u-constrained-content">
                    <legend class="form-fieldset__legend t2 t--underline accent--{{ pageAccent }}">
                        {{ fieldsetCopy.legend or fieldset.legend }}
                    </legend>

                    {% set introduction = fieldsetCopy.introduction or fieldset.introduction %}
                    {% if introduction %}
                        <div class="form-fieldset__intro s-prose">{{ introduction | safe }}</div>
                    {% endif %}

                    <div class="form-fieldset__fields">
                        {% for field in fieldset.fields %}
                            {% set fieldCopy = copy.fields[field.name] %}
                            {{ formField(field, fieldCopy, errors) }}
                        {% endfor %}
                    </div>
                </fieldset>
            {% endfor %}

            {% if csrfToken %}
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            {% endif %}

            <div class="form-actions">
                <input class="btn btn--next" type="submit" value="{{ __('global.misc.next') | capitalize }}" />
            </div>
        </form>
    </main>
{% endblock %}
