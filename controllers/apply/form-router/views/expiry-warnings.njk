{% from "components/modal/macro.njk" import modal %}

{#
    The IDs of these modals are referenced in forms.js
    and must be changed there if changed here.
#}

{% macro expiryPending() %}
    {% call modal('apply-expiry-pending', title = __('apply.expirationWarnings.pending.title')) %}
        {{ __('apply.expirationWarnings.pending.body') | safe }}
        <div class="form-actions form-actions--constrained">
            <button type="button"
                    class="btn btn--small js-modal-dialog-close-button"
                    data-ga-on="click"
                    data-ga-event-category="Session"
                    data-ga-event-action="Modal Pending button click"
                    data-ga-event-label="Continue">
                {{ __('apply.expirationWarnings.pending.actions.continue') }}
            </button>
            <a href="{{ localify('/user/logout') }}"
               class="btn btn--small btn--outline"
               data-ga-on="click"
               data-ga-event-category="Session"
               data-ga-event-action="Modal Pending button clicked"
               data-ga-event-label="Log out">
                {{ __('apply.expirationWarnings.pending.actions.logOut') }}
            </a>
        </div>
    {% endcall %}
{% endmacro %}

{% macro expiryLoggedOut() %}
    {% call modal('apply-expiry-expired',
        title = __('apply.expirationWarnings.expired.title'),
        closeButton = false
    ) %}
        {{ __('apply.expirationWarnings.expired.body') | safe }}
        <div class="form-actions form-actions--constrained">
            <a href="{{ localify('/user/login') }}"
               class="btn btn--small"
               data-ga-on="click"
               data-ga-event-category="Session"
               data-ga-event-action="Modal Expired button clicked"
               data-ga-event-label="Log in again">
                {{ __('apply.expirationWarnings.expired.actions.logInAgain') }}
            </a>
            <a href="{{ localify('/') }}"
               class="btn btn--small btn--outline"
               data-ga-on="click"
               data-ga-event-category="Session"
               data-ga-event-action="Modal Expired button clicked"
               data-ga-event-label="Visit homepage">
                {{ __('apply.expirationWarnings.expired.actions.visitHomepage') }}
            </a>
        </div>
    {% endcall %}
{% endmacro %}
