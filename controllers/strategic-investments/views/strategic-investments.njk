{% from "components/hero.njk" import hero with context %}
{% from "components/promo-card/macro.njk" import promoCard %}

{% extends "controllers/common/views/information-page.njk" %}

{% block customContent %}
    {% if strategicProgrammes.length > 0 %}
        <section class="u-inner-wide-only u-margin-bottom">
            <h2 class="t--underline">Our strategic programmes</h2>
            <ul class="flex-grid flex-grid--3up">
                {% for programme in strategicProgrammes %}
                    <li class="flex-grid__item">
                        {{ promoCard({
                            "title": programme.title,
                            "trailText": programme.trailText,
                            "image": {
                                "url": programme.thumbnail,
                                "alt": programme.title
                            },
                            "link": { "url": programme.linkUrl, "label": "Learn more" }
                        }) }}
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endif %}
{% endblock %}
