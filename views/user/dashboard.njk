{% extends "../layouts/tools.njk" %}
{% from "./user-helpers.njk" import listErrors with context %}

{% block title %}Your account{% endblock %}

{% block content %}

    {{ listErrors() }}

    {% if not user.is_active %}
        {% set activationSent = status === STATUSES.ACTIVATION_SENT %}
        <div class="alert alert-warning" role="alert">
            <p><strong>Warning:</strong> You haven't activated your account yet!</p>
            {% if activationSent %}
                <p><strong>We just sent an email to {{ user.username }} with a link to activate your account.</strong></p>
            {% endif %}
            <p>Would you like to <a href="{{ makeUserLink('activate') }}">re-send your activation link</a>?</p>
        </div>
    {% endif %}

    <h1>Dashboard</h1>
    <h3>Logged in as <strong>{{ user.username }}</strong>.</h3>

{% endblock %}
