{% from "components/breadcrumb-trail/macro.njk" import breadcrumbTrail %}

{% macro contentBoxIntro(breadcrumbs, accent, heroCredit = false) %}
    <section class="content-box content-box--tinted u-inner-wide-only{% if accent %} u-accent-border-top-{{ accent }}{% endif %}">
        {{ breadcrumbTrail(breadcrumbs, isTinted = true) }}
        <div class="s-prose u-constrained-content-wide">
            {{ caller() }}
            {% if heroCredit %}
                <p class="u-note u-no-margin">
                    <strong>{{ __('global.misc.imageCredit') }}:</strong>
                    {{ heroCredit }}
                </p>
            {% endif %}
        </div>
    </section>
{% endmacro %}
