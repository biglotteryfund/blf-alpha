{% macro userStatus(user) %}
    {% if user %}
        {% if user.userType === 'user' and not user.userData.is_active %}
            <p class="message" role="alert">
                {{ __('user.common.activationRequired') | safe }}
            </p>
        {% endif %}
    {% endif %}
{% endmacro %}

{% macro staffStatus(user) %}
    {% if user %}
        <div class="user-status">
            <div class="user-status__current">
                <span class="o-badge o-badge--primary u-margin-right-s">Staff</span>
                {{ __('user.common.loggedInAs') }} <strong>{{ user.userData.fullName }}</strong>
            </div>
            <div class="user-status__actions">
                <a href="{{ localify('/user/staff/logout') }}">
                    {{ __('user.common.logOut') }}
                </a>
            </div>
        </div>
    {% endif %}
{% endmacro %}
