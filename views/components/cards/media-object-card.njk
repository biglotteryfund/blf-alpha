{#
Media object card

props: {Object}
- title {String}
- subtitle {String}
- description {Html}
- image {Object} { url: {String}, alt: {String} }
- url {String}
accent: {String}
#}
{% macro mediaObjectCard(props, accent = 'pink') %}
    <div class="media-card u-accent-border-top-{{ accent }}">
        <div class="media-card__inner">
            {% if props.image %}
                <div class="media-card__media">
                    <img src="{{ props.image.url }}" alt="{{ props.image.alt }}">
                </div>
            {% endif %}
            <div class="media-card__body">
                <h4 class="media-card__title">{{ props.title }}</h4>
                <p class="media-card__subtitle">{{ props.subtitle }}</p>
                <div class="media-card__description s-prose">
                    {{ props.description | safe  }}
                    {% if props.url %}
                        <a href="{{ props.url }}">{{ __('global.misc.readMore') }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
