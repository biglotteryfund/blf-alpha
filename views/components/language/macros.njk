{% from "components/icons.njk" import iconTick %}

{% macro languageLink(currentLocale) %}
    {% if isBilingual %}
        {% if currentLocale == 'en' %}
            <a lang="cy" class="qa-lang-switcher" href="{{ getCurrentUrl('cy') }}">Cymraeg</a>
        {% else %}
            <a lang="en" class="qa-lang-switcher" href="{{ getCurrentUrl('en') }}">English</a>
        {% endif %}
    {% endif %}
{% endmacro %}

{% macro languageSwitcher(currentLocale) %}
    {% for item in [{ "id": "en", "label": "English", "lang": "language selected" }, { "id": "cy", "label": "Cymraeg", "lang": "dewis iaith" }] %}
        {% if item.id === currentLocale %}
            <span class="language-control is-current" >
                {{ iconTick() }} {{ item.label }}
                <span class="u-visually-hidden ">
                    {{ item.lang }}
                </span>
            </span>
        {% else %}
            <a href="{{ getCurrentUrl(item.id) }}"
                class="language-control">
                {{ item.label }}
            </a>
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro languageServiceMessage(currentLocale) %}
    {% if isBilingual %}
