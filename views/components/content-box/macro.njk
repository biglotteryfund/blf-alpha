{% macro contentBox(id = false, isConstrained = true, skipProse = false) %}
    <section class="content-box{% if isConstrained %} u-inner-wide-only{% endif %}"{% if id %} id="{{ id }}"{% endif %}>
        <div class="{% if not skipProse %}s-prose {% endif %}u-constrained-content-wide">
            {{ caller() }}
        </div>
    </section>
{% endmacro %}
