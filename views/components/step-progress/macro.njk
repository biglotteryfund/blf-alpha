{% macro stepProgress(steps) %}
    <ol class="step-progress">
        {% for step in steps %}
            <li class="step-progress__item{% if step.isCompleted %} step-progress__item--completed{% endif %}">
                <div class="step-progress__content">
                    <h3 class="step-progress__item-title">{{ step.title }}</h3>
                    <p class="step-progress__item-description">
                        {{ step.description }}
                    </p>
                </div>
            </li>
        {% endfor %}
    </ol>
{% endmacro %}

{% macro processMap(process) %}
    <ol class="process-map">
        {% for step in process %}
            <li class="process-map__item process-map__item--{{ step.type }}{% if step.isCompleted %} process-map__item--completed{% endif %}">
                {% if step.type === 'step' %}
                    {% if step.isCurrent %}
                        <div class="process-map__item-indicator">
                            You are here<span></span>
                        </div>
                    {% endif %}
                    <div class="process-map__item-title">
                        <div class="process-map__item-title__content">
                            <span>{{ step.title }}</span>
                        </div>
                    </div>
                    <div class="process-map__item-description"><p>{{ step.description | safe }}</p></div>
                {% elseif step.type === 'action' %}
                    <span>{{ step.title }}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ol>
{% endmacro %}
