{% from "components/icons.njk" import iconFacebook, iconInstagram, iconTwitter %}

{% macro socialLinks(labels, pageAccent = 'blue', showAsBlock = true) %}
    {% set groupClass = "o-button-group-block" if showAsBlock else "o-button-group-flex" %}
    <div class="{{ groupClass }} u-gutter-half">
        <a class="btn btn--small btn--outline accent--{{ pageAccent }}"
            href="{{ __('global.brand.instagram') }}">
            <span class="btn__icon">{{ iconInstagram() }}</span>
            {{ labels.followUsOn }} {{ labels.instagram }}
        </a>
        <a class="btn btn--small btn--outline accent--{{ pageAccent }}"
            href="{{ __('global.brand.facebook') }}">
            <span class="btn__icon">{{ iconFacebook() }}</span>
            {{ labels.followUsOn }} {{ labels.facebook }}
        </a>
        <a class="btn btn--small btn--outline accent--{{ pageAccent }}"
            href="https://www.twitter.com/{{ __('global.brand.twitter') }}" >
            <span class="btn__icon">{{ iconTwitter() }}</span>
            {{ labels.followUsOn }} {{ labels.twitter }}
        </a>
    </div>
{% endmacro %}
