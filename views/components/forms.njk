{% macro input(fieldName, fieldLabel, inputType = 'text', required = false) %}
    {% set error = getFormErrorForField(request.session.errors, fieldName) %}
    <label class="form-fund__item" for="ff-{{ fieldName }}">{{ fieldLabel }}</label>
    {% if inputType == 'textarea' %}
        <textarea class="form-fund__item{% if error %} is-error{% endif %}"
                  name="{{ fieldName }}"
                  placeholder="{% if error %}{{ error.msg }}{% else %}{{ fieldLabel }}{% endif %}">
                  id="ff-{{ fieldName }}"{% if required %} required{% endif %}>{{ request.session.values[fieldName] }}</textarea>
    {% else %}
        <input class="form-fund__item{% if error %} is-error{% endif %}"
               type="{{ inputType }}"
               name="{{ fieldName }}"
               id="ff-{{ fieldName }}"{% if required %} required{% endif %}
               value="{{ request.session.values[fieldName] }}"
               placeholder="{% if error %}{{ error.msg }}{% else %}{{ fieldLabel }}{% endif %}">
    {% endif %}
{% endmacro %}