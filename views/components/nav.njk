{% macro navlinks(itemClass) %}
    <li{% if itemClass %} class="{{ itemClass }}"{% endif %}>
        <a href="/">{{ __("global.nav.home") | safe }}</a>
    </li>
    <li{% if itemClass %} class="{{ itemClass }}"{% endif %}>
        <a href="/funding">{{ __("global.nav.funding") | safe }}</a>
    </li>
    <li{% if itemClass %} class="{{ itemClass }} {{ itemClass }}--last"{% endif %}>
        <a href="/about-big">{{ __("global.nav.about") | safe }}</a>
    </li>
    <li{% if itemClass %} class="nav__lang {{ itemClass }} {{ itemClass }}--last"{% endif %}>
        {% if locale == 'en' %}
            <a href="{{ getCurrentUrl('cy') }}">Cymraeg</a>
        {% else %}
            <a href="{{ getCurrentUrl('en') }}">English</a>
        {% endif %}
    </li>
    <li class="nav__search">
        <form class="form-search" role="search" action="/search">
            <input type="hidden" name="lang" value="en-GB">
            <input type="hidden" name="type" value="All">
            <input type="hidden" name="order" value="r">
            <input class="form-search__input" aria-label="Search this website" type="text" placeholder="Search" name="q">
            <i class="form-search__icon ion-search"><span class="visually-hidden">Search</span></i>
        </form>
    </li>
{% endmacro %}