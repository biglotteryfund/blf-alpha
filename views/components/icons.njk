{% macro icon(slug, title, viewbox, variant = 'small', ariaHidden = false, selected = false) %}
    {% set id = 'aria-' + slug + '-title-' | appendUuid %}
    <svg
        role="img"
        class="icon icon--{{ variant }} icon--{{ slug }}"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="{{ viewbox }}" width="32" height="32"
        {% if ariaHidden %}aria-hidden="true"{% endif %}
        {% if selected %}
            aria-label="selected"
        {% else %}
            aria-labelledby="{{ id }}"
        {% endif %}

        focusable="false"
    >
        <title id="{{ id }}">{{ title }}</title>
        {{ caller() }}
    </svg>
{% endmacro %}

