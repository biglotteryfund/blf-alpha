{% macro applicationCard(props) %}
    <article class="application-card-new">
        <header class="application-card-new__header">
            <h3 class="application-card-new__title u-tone-brand-primary">
                <a href="#" class="u-link-unstyled">
                    {{ props.projectName  }}
                </a>
            </h3>
            <p class="application-card-new__amount">
                <strong>Amount requested</strong>:
                <span class="o-pill">{{ props.amountRequested }}</span>
            </p>
        </header>

        <div class="application-card-new__body u-text-medium">
            <dl class="o-definition-list o-definition-list--compact u-margin-bottom">
                <dt>Project length</dt><dd>2 years</dd>
                <dt>Location</dt><dd>Northern Ireland </dd>
                <dt>Organisation</dt><dd>Northern Ireland Institute for the Disabled</dd>
            </dl>

            <p>
                <strong>Status</strong>:
                {{ props.progress.sectionsComplete }} of {{ props.progress.sections.length }} sections complete
            </p>

            <ol class="progress-bar">
                {% for section in props.progress.sections %}
                    <li class="progress-bar__step progress-bar__step--{{ section.status }}">
                        <span class="u-visually-hidden">
                            {{ section.label }} - {{ section.statusLabel }}
                        </span>
                    </li>
                {% endfor %}
            </ol>

            <p style="rgba(0, 0, 0, 0.75)">
                Last updated:
                {{ formatCalendarTime('2019-10-15T15:35:31.433Z') }}
            </p>

        </div>

        <div class="application-card-new__actions">
            <a href="#" class="btn">Continue</a>
            <a class="u-text-medium" href="#">Delete</a>
        </div>

        <div class="application-card-new__meta u-text-small">
            You have until
            <strong>{{ formatDate("2019-12-11T09:00:00.000Z") }}</strong>
            to complete your application
        </div>

    </article>
{% endmacro %}
