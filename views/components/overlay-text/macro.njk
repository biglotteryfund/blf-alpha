{% macro overlayText(text, linkUrl = false, accent = 'pink', isTranslucent = false) %}
    <span class="overlay-text overlay-text--accent-{{ accent }}{% if isTranslucent %} overlay-text--translucent{% endif %}">
        {% if linkUrl %}<a class="overlay-text__link" href="{{ linkUrl }}">{% endif %}
        <span class="overlay-text__inner">{{ caller() }}</span>
        {% if linkUrl %}</a>{% endif %}
    </span>
{% endmacro %}
