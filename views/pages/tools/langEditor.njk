{% extends "../../layouts/tools.njk" %}

{% block title %}Language editor{% endblock %}

{% block extraHead %}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/medium-editor/latest/css/medium-editor.min.css" type="text/css" media="screen" charset="utf-8">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/medium-editor/5.23.0/css/themes/bootstrap.min.css" type="text/css" media="screen" charset="utf-8">
{% endblock %}

{% block headerAction %}
    <form class="navbar-form navbar-right">
        <button type="button" class="btn btn-default" id="js-save-changes">Save changes</button>
    </form>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-sm-6">
            <h2 id="js-title-en"></h2>
            <div id="js-locale-en" class="js-locale-id" data-locale="en"></div>
        </div>
        <div class="col-sm-6">
            <h2 id="js-title-cy"></h2>
            <div id="js-locale-cy" class="js-locale-id" data-locale="cy"></div>
        </div>
    </div>

    <script src="//cdn.jsdelivr.net/medium-editor/latest/js/medium-editor.min.js"></script>
    <script src="/assets/jsoneditor/jsoneditor.js"></script>
    <script src="/assets/jsoneditor/editor.js"></script>

{% endblock %}