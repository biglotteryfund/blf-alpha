{% import "components/hero.njk" as hero %}
{% import "components/headers.njk" as headers %}

{% extends "../layouts/main.njk" %}

{% block content %}

    {% set heroContent %}
        <div class="nudge-bottom accent--green">
            {{ headers.blockheader('h2', 'What did we fund near you?', 30, 'hero__header') }}
            <form class="form-fund form-fund--inline" action="/lookup">
                <input type="text" aria-label="Enter a postcode" placeholder="eg. B14 7EW" name="postcode">
                <input type="submit" class="btn btn--cta" value="Look up awards">
            </form>
        </div>
    {% endset %}

    {{ hero.header('data', heroContent, 'pink') }}

    <article role="main" class="nudge-up">
        <div class="inner p-text accent--pink accent-b-t bg-plain stats-holder">
            <h3 class="t3">Our year in numbers</h3>

            <button class="stats-btn stats-btn--prev js-carousel-prev">
                {% include "../includes/svg/arrow-left.svg" %}
                <span class="visually-hidden">Previous item</span>

            </button>
            <button class="stats-btn stats-btn--next js-carousel-next">
                {% include "../includes/svg/arrow-right.svg" %}
                <span class="visually-hidden">Next item</span>
            </button>

            <ul class="stats js-carousel">
                <li class="stats__icon">
                    <dl>
                        <dt>11,779</dt>
                        <dd>Awards made</dd>
                    </dl>
                </li>

                <li class="stats__icon">
                    <dl>
                        <dt>91.3%</dt>
                        <dd>Percentage of awards to the voluntary &amp; community sectors</dd>
                    </dl>
                </li>

                <li class="stats__icon">
                    <dl>
                        <dt>89.1%</dt>
                        <dd>Percentage of awards for less than &pound;10,000</dd>
                    </dl>
                </li>

                <li class="stats__icon">
                    <dl>
                        <dd>Total grantmaking</dd>
                        <dt>&pound;650 million</dt>
                    </dl>
                </li>

                <li class="stats__icon">
                    <dl>
                        <dt>6.6%</dt>
                        <dd>Total operating costs</dd>
                    </dl>
                </li>

                <li class="stats__icon">
                    <dl>
                        <dt>&pound;276</dt>
                        <dd>Smallest award made through the Communities &amp; Families Fund</dd>
                    </dl>
                </li>
            </ul>
        </div>
    </article>


    <article role="main" class="accent--turquoise">
        <div class="inner--wide-only p-text accent-b-t accent-bg pos-rel">
            <h3 class="t3">Where we fund projects</h3>

            <div class="map-wrapper">
                {% include "../includes/uk-svg.njk" %}
            </div>

            <div class="map-info hidden accent--turquoise accent-b-t p-text bg-plain" id="js-map-info">
                <h4 class="t3 m-b" id="js-region-name"></h4>
                <h5 class="t4 m-b-none accent-text" id="js-num-grants"></h5>
                <h6 class="t5">Total Grants</h6>
                <h5 class="t4 m-t accent-text" id="js-num-awards"></h5>
                <h6 class="t5">Total Awarded</h6>
                <a class="btn btn--cta btn--small" id="js-read-more" href="#">Find out more</a>
            </div>
        </div>
    </article>

{% endblock %}