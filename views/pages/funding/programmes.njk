{% from "components/hero.njk" import hero %}
{% from "components/programmes.njk" import programmeList, selectionTrail with context %}

{% extends "layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% set heroImage = heroImages.youngFoundation %}
{% set socialImage = heroImage %}

{% block content %}
    <main role="main">
        {{ hero(
            titleText = title,
            image = heroImage,
            accent = 'green'
        ) }}

        <section class="inner--wide-only content-box content-box--even-inset accent--green a--border-top nudge-up">
            {{ selectionTrail(
                trail = activeBreadcrumbs,
                itemCount = programmes.length
            ) }}

            <h2 class="u-visually-hidden">{{ activeBreadcrumbsSummary }}</h2>

            {% if programmes | length > 0 %}
                {{ programmeList(
                    accent = 'pink',
                    labels = copy.details,
                    programmes = programmes
                ) }}
            {% else %}
                <p>No results</p>
            {% endif %}
        </section>
    </main>
{% endblock %}
