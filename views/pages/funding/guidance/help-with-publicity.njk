{% from "components/hero.njk" import hero %}

{% extends "layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% set heroImage = heroImages.centreForBetterHealthBakery %}
{% set socialImage = heroImage %}

{% block content %}
    {% set pageAccent = 'turquoise' %}

    {{
        hero(
            titleText = title,
            image = heroImage,
            accent = pageAccent
        )
    }}

    <main role="main" class="nudge-up">
        <div class="inner--wide-only accent--{{ pageAccent }} a--border-top content-box s-prose s-prose--long">
            {{ copy.body.part1 | safe }}
            <ol>
                {% for action in copy.body.actions  %}
                    <li><strong>{{ action }}</strong></li>
                {% endfor %}
            </ol>
            {{ copy.body.part2 | safe }}
        </div>
    </main>
{% endblock %}
