{% import "components/hero.njk" as hero %}
{% import "components/headers.njk" as headers %}

{% extends "layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% block content %}

    {% set heroContent %}
        <div class="nudge-bottom">
            {{ headers.blockheader('h2', title, 30, 'hero__header accent--turquoise') }}
        </div>
    {% endset %}

    {{ hero.header('social', heroContent, 'blue') }}

    <article role="main" class="nudge-up">
        <div class="inner--wide-only p accent--turquoise accent-b-t accent-bg bordered">
            {{ __("funding.guidance.help-with-publicity.body.part1") | safe }}

            <ul class="grid grid--wide-only grid--equal grid--3-up grid--padded">
                <li class="grid__item">
                    <div class="grid__item__inner accent--blue accent-b-t-l">
                        <img src="{{ 'images/funding/social1.jpg' | getCachebustedPath }}" class="grid__item__poster" alt="A person's hand interacting with a tablet device" />
                        {{ headers.blockheader(
                            'h4',
                        __("funding.guidance.help-with-publicity.body.actions.1") | safe,
                            18,
                            'minor grid__item__title grid__item__title--top'
                        )}}
                    </div>
                </li>
                <li class="grid__item">
                    <div class="grid__item__inner accent--blue accent-b-t-l">
                        <img src="{{ 'images/funding/social2.jpg' | getCachebustedPath }}" class="grid__item__poster" alt="A person's hands typing on a laptop keyboard" />
                        {{ headers.blockheader(
                            'h4',
                        __("funding.guidance.help-with-publicity.body.actions.2") | safe,
                            18,
                            'minor grid__item__title grid__item__title--top'
                        )}}
                    </div>
                </li>
                <li class="grid__item">
                    <div class="grid__item__inner accent--blue accent-b-t-l">
                        <img src="{{ 'images/funding/social3.jpg' | getCachebustedPath }}" class="grid__item__poster" alt="A person's hands tapping on a mobile phone screen" />
                            {{ headers.blockheader(
                            'h4',
                            __("funding.guidance.help-with-publicity.body.actions.3") | safe,
                            18,
                            'minor grid__item__title grid__item__title--top'
                        )}}
                    </div>
                </li>
            </ul>

            {{ __("funding.guidance.help-with-publicity.body.part2") | safe }}

        </div>

    </article>

{% endblock %}