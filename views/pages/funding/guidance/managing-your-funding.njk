{% import "components/hero.njk" as hero %}
{% import "components/headers.njk" as headers %}

{% extends "layouts/main.njk" %}

{% block title %}{{ content.title }} | {% endblock %}

{% block content %}

    {% set heroContent %}
        {{ headers.overlayText('h2', content.title, 't2') }}
    {% endset %}

    {{ hero.header('managing-grants', heroContent, 'blue') }}

    <article role="main" class="nudge-up">
        <div class="inner--wide-only accent--blue a--border-top content-box s-prose s-prose--long">
            {{ content.introduction | safe }}
        </div>

        <div class="inner">
            <ul class="unstyled grid grid--2-up grid--padded grid--equal grid--wide-only">
                {% set themes = cycler('pink-mid', 'blue', 'turquoise', 'orange') %}
                {% for page in content.children %}
                    <li class="grid__item">
                        {{ hero.miniatureHero(
                            titleText = page.trailText,
                            imagePath = page.photo,
                            imageCaption = page.title,
                            linkUrl = page.url,
                            accent = themes.next(),
                            useRemoteImages = true
                        )}}
                    </li>
                {% endfor %}
            </ul>
        </div>

        {% if content.outro %}
            <div class="inner--wide-only accent--turquoise a--border-top content-box s-prose s-prose--long">
                {{ content.outro | safe }}
            </div>
        {% endif %}
    </article>

{% endblock %}
