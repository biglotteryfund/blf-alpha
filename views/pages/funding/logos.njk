{% block contentPrimary %}
    {% set pageAccent = content.themeColour %}
    {{ super() }}
    <div class="content-box inner--wide-only accent--{{ pageAccent }} a--border-top accent-content--{{ pageAccent }}">
        <div class="s-prose">
            <h2>{{ copy.locationPrompt }}</h2>
        </div>

        <div class="js-tabset" data-paneset="paneset-regions">
            <ul class="unstyled grid grid--padded grid--equal grid--2-up grid--wide-only">
                <li class="grid__item">
                    <a href="#region1" class="btn btn--block btn--small accent--{{ pageAccent }} a--btn js-tab">
                        {{ copy.locations.monolingual }}
                    </a>
                </li>
                <li class="grid__item">
                    <a href="#region2" class="btn btn--block btn--small accent--{{ pageAccent }} a--btn js-tab">
                        {{ copy.locations.bilingual }}
                    </a>
                </li>
            </ul>
        </div>

        <div class="js-paneset" id="paneset-regions">
            {{ pane(
                paneId = 'region1',
                content = contentMonolingual,
                accordion = false
            ) }}

            {{ pane(
                paneId = 'region2',
                content = contentBilingual,
                accordion = false
            ) }}
        </div>
    </div>
{% endblock %}
