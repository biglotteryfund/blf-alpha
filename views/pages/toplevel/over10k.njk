{% import "../../components/hero.njk" as hero %}
{% import "../../components/headers.njk" as headers %}
{% import "../../components/blocks.njk" as blocks %}

{% extends "../../layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% block content %}

    {% set heroContent %}
        {{ headers.overlayText('h2', "The Big Lottery Fund makes grants of more than Â£10,000, offering flexible funding and support for longer term projects", 't2') }}
    {% endset %}

    {{ hero.header('over10k', heroContent, 'blue', 'Annexe Communities') }}

    <article role="main" class="nudge-up">
        <div class="inner--wide-only accent--blue a--border-top content-box">
            <p>Larger grants are made through a variety of programmes in all nations within the United Kingdom. Our funding will enable you to use your local knowledge, strengths and resources to make positive changes in your community, either through your own organisation, or in partnership with others</p>

            <h3 class="t3">Want to know more? Start by telling us where your project is going to be</h3>

            <ul class="unstyled grid grid--padded grid--equal grid--4-up grid--wide-only">
               <li class="grid__item"><a href="https://www.biglotteryfund.org.uk/funding/funding-finder?area=England" class="btn accent--turquoise a--btn btn--block btn--small">England</a></li>
               <li class="grid__item"><a href="https://www.biglotteryfund.org.uk/funding/funding-finder?area=Scotland" class="btn accent--turquoise a--btn btn--block btn--small">Scotland</a></li>
               <li class="grid__item"><a href="https://www.biglotteryfund.org.uk/funding/funding-finder?area=Wales" class="btn accent--turquoise a--btn btn--block btn--small">Wales</a></li>
               <li class="grid__item"><a href="https://www.biglotteryfund.org.uk/funding/funding-finder?area=Northern+Ireland" class="btn accent--turquoise a--btn btn--block btn--small">Northern Ireland</a></li>
            </ul>
            <div class="central-gap">
                <a href="https://www.biglotteryfund.org.uk/global-content/programmes/uk-wide/uk-portfolio" class="btn accent--turquoise a--btn btn--block btn--small">My project will help people right across the UK</a>
            </div>

        </div>

        <div class="inner">
            <h3 class="t3">Examples of projects that have been funded</h3>
            <ul class="unstyled grid grid--3-up grid--padded--large grid--equal grid--wide-only">
                {% for project in copy.projects %}
                    <li class="grid__item">{{ blocks.projectBlock(project, 'accent--turquoise') }}</li>
                {% endfor %}
            </ul>

            <div class="central-gap">
                <a href="#" class="btn btn--outline accent--turquoise btn--a btn--block btn--small">Browse all funded projects</a>
            </div>
        </div>

    </article>


{% endblock %}