{% import "components/hero.njk" as hero %}
{% import "components/headers.njk" as headers %}
{% import "components/segment.njk" as segment %}

{% extends "layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% block content %}

    {% set heroContent %}
        <div class="nudge-bottom--always">
            {{ headers.blockheader('h2', title, 30, 'hero__header') }}
        </div>
    {% endset %}

    {{ hero.header('contact', heroContent, 'turquoise') }}

    <article role="main" class="nudge-up--always">

        <div class="inner links-emphasised">

            {% set applicationQuery %}
                <h3 class="t6 m-t">{{ copy.offices.england }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '0345 4 10 20 30' | makePhoneLink | safe }}<br />
                    <span class="t7">{{ copy.methods['text-relay'] }}</span>: 18001 {{ copy.plus }} 0345 4 10 20 30 ({{ copy['hearing-speech-impairment'] }})<br />
                    <span class="t7">{{ copy.methods.email }}</span>: <a href="mailto:general.enquiries@biglotteryfund.org.uk">general.enquiries@biglotteryfund.org.uk</a><br />
                    <span class="t7">{{ copy.methods.address }}</span>: 1 Plough Place, {{ copy.offices.london }}, EC4A 1DE
                </p>

                <h3 class="t6 m-t">{{ copy.offices.ni }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '028 9055 1455' | makePhoneLink | safe }}<br />
                    <span class="t7">{{ copy.methods['text-relay'] }}</span>: 18001 {{ copy.plus }} 028 9055 1431 ({{ copy['hearing-speech-impairment'] }})<br />
                    <span class="t7">{{ copy.methods.fax }}</span>: 028 9055 1445<br />
                    <span class="t7">{{ copy.methods.email }}</span>: <a href="mailto:enquiries.ni@biglotteryfund.org.uk">enquiries.ni@biglotteryfund.org.uk</a><br />
                    <span class="t7">{{ copy.methods.address }}</span>: 1 Cromac Quay, Belfast, BT7 2JD
                </p>

                <h3 class="t6 m-t">{{ copy.offices.scotland }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '0300 123 7110' | makePhoneLink | safe }}<br />
                    <span class="t7">{{ copy.methods['text-relay'] }}</span>: 18001 0300 123 7110 ({{ copy['hearing-speech-impairment']}})<br />
                    <span class="t7">{{ copy.methods.bsl }}</span>: {{ copy['bsl-scotland'] }}<br />
                    <span class="t7">{{ copy.methods.email }}</span>: <a href="mailto:advicescotland@biglotteryfund.org.uk">advicescotland@biglotteryfund.org.uk</a><br />
                    <span class="t7">{{ copy.methods.switchboard }}</span>: {{ '0141 2421400' | makePhoneLink | safe }}<br />
                    <span class="t7">{{ copy.methods.address }}</span>: Pacific House, 70 Wellington Street, Glasgow, G2 6UA
                </p>

                <h3 class="t6 m-t">{{ copy.offices.wales }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '0300 123 0735' | makePhoneLink | safe }}<br />
                    <span class="t7">{{ copy.methods['text-relay'] }}</span>: 18001 {{ copy.plus }} 0300 123 0735 ({{ copy['hearing-speech-impairment'] }})<br />
                    <span class="t7">{{ copy.methods.email }}</span>: <a href="mailto:{{ copy.wales.email }}">{{ copy.wales.email }}</a><br />
                    <span class="t7">{{ copy.methods.address }}</span>: {{ copy.wales.address1 }}<br />
                    <span class="t7">{{ copy.methods.address }}</span>: {{ copy.wales.address2 }}<br />
                </p>
            {% endset %}

            {% set grantQuery %}
                {{ copy.topics.grantQuery.body | safe }}
            {% endset %}

            {% set feedback %}
                <div class="links-emphasised">
                    {{ copy.topics.feedback.body | safe }}
                </div>
            {% endset %}

            {% set other %}
                <h3 class="t6 m-t">{{ copy.offices.corporate }}</h3>

                <p>
                    1 Plough Place<br />
                    {{ copy.offices.london }}<br />
                    EC4A 1DE
                </p>

                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '020 7211 1800' | makePhoneLink | safe }} {{ copy.or }} {{ '0300 500 5050' | makePhoneLink | safe }}<br />
                    <span class="t7">{{ copy.methods['text-relay'] }}</span>: 18001 {{ copy.plus }} 020 7211 1800 {{ copy.or }} 0300 500 5050 ({{ copy['hearing-speech-impairment'] }})<br />
                    <span class="t7">{{ copy.methods.fax }}</span>: 020 7211 1750
                </p>
            {% endset %}

            {% set pressQuery %}
                <h3 class="t6 m-t">{{ copy.offices.england }}/{{ copy.offices.uk }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '020 7211 1888' | makePhoneLink | safe }}<br />
                    ({{ copy['out-of-hours'] }}: 07867 500572)<br />
                    <span class="t7">Email:</span> <a href="mailto:pressoffice@biglotteryfund.org.uk">pressoffice@biglotteryfund.org.uk</a>
                </p>

                <h3 class="t6 m-t">{{ copy.offices.ni }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '02890 551 432' | makePhoneLink | safe }}<br />
                    ({{ copy['out-of-hours'] }}: {{ '07580 811 135' | makePhoneLink | safe }})
                </p>

                <h3 class="t6 m-t">{{ copy.offices.scotland }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '0141 242 1451' | makePhoneLink | safe }}<br />
                    ({{ copy['out-of-hours'] }}: {{ '07880 737 157' | makePhoneLink | safe }})
                </p>

                <h3 class="t6 m-t">{{ copy.offices.wales }}</h3>
                <p>
                    <span class="t7">{{ copy.methods.phone }}</span>: {{ '029 2067 8207' | makePhoneLink | safe }}<br />
                    ({{ copy['out-of-hours'] }}: {{ '07760 171 431' | makePhoneLink | safe }})
                </p>

                <h3 class="t6 m-t">{{ copy.topics.pressQuery.subtitle }}</h3>
                {{ copy.topics.pressQuery.body | safe }}
            {% endset %}

            {{ segment.segment(copy.topics.applicationQuery.title, applicationQuery, 'blue', 'images/contact/1.jpg') }}
            {{ segment.segment(copy.topics.grantQuery.title, grantQuery, 'orange', 'images/contact/2.jpg') }}
            {{ segment.segment(copy.topics.feedback.title, feedback, 'green', 'images/contact/4.jpg', characterWrap = 18) }}
            {{ segment.segment(copy.topics.other.title, other, 'turquoise', 'images/contact/5.jpg') }}
            {{ segment.segment(copy.topics.pressQuery.title, pressQuery, 'pink', 'images/contact/3.jpg', id = contactPressAnchor) }}
        </div>

    </article>

{% endblock %}