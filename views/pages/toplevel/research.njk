{% from "components/hero.njk" import hero %}
{% from "components/links.njk" import linksList, sectionLinks %}

{% extends "layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% set socialImage = heroImage %}

{% block content %}
    {% set pageAccent = 'pink' %}

    <main role="main">
        {{
            hero(
                titleText = title,
                image = heroImage,
                accent = pageAccent
            )
        }}

        <div class="nudge-up">
            {# Section Links #}
            <section class="content-box inner--wide-only accent--{{ pageAccent }} a--border-top">
                <p>{{ copy.intro }}</p>
                {{ sectionLinks(copy.sectionLinks) }}
            </section>

            {# Downloads #}
            <section class="content-box inner--wide-only accent--{{ pageAccent }} a--border-top">
                <h2 class="t2 t--underline">{{ copy.downloads.title }}</h2>
                {{ linksList(copy.downloads.links, isDocumentsList = true) }}
            </section>
        </div>
    </main>
{% endblock %}
