{% from "components/hero.njk" import sectionHero %}
{% import "components/segment.njk" as segment %}

{% extends "layouts/main.njk" %}

{% block title %}{{ title }} | {% endblock %}

{% set bodyClass = "has-full-bleed-header" %}
{% set heroImage = heroImages.freedomOfInformation %}
{% set socialImage = heroImage %}

{% block content %}

    {% set pageAccent = 'blue' %}

    {{
        sectionHero(
            titleText = title,
            image = heroImage,
            accent = pageAccent
        )
    }}


    <article role="main" class="nudge-up">

        <div class="inner--wide-only accent--{{ pageAccent }} a--border-top content-box s-prose">
            {{ copy.body | safe }}
        </div>

    </article>

{% endblock %}
