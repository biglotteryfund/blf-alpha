{% from "components/hero.njk" import sectionHero %}

{% extends "layouts/main.njk" %}

{% set title = __('toplevel.ebulletin.shortTitle') %}
{% block title %}{{ title }} | {% endblock %}

{% set bodyClass = "has-full-bleed-header" %}
{% set heroImage = heroImages.streetDreams %}
{% set socialImage = heroImage %}

{% block content %}
    {% set pageAccent = 'pink' %}
    {{
        sectionHero(
            titleText = title,
            image = heroImage,
            accent = pageAccent
        )
    }}

    <article role="main" class="nudge-up">
        <div class="inner--wide-only accent--{{ pageAccent }} a--border-top
            padded spaced form-ebulletin form-ebulletin--wide">
            {% include "includes/ebulletin.njk" %}
        </div>
    </article>
{% endblock %}
