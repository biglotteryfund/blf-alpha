    <main class="u-nudge-up">
        {{ pageTitle(title) }}

        {% call contentBox(pageAccent) %}
            <h2>This page has been archived</h2>

            <p><strong>Automatically redirecting you to the National Archives in two secondsâ€¦</strong></p>
            <p>If you are not redirected automatically, please use this link: <a href="{{ archiveUrl }}">{{ archiveUrl }}</a></p>
        {% endcall %}
    </main>
{% endblock %}
