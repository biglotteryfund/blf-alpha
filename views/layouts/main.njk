{% from "components/accessibility.njk" import accessibilityNav with context %}
<!doctype html>
<html lang="{{ locale }}"
    class="no-js locale--{{ locale }}{% if isHighContrast %} contrast--high{% endif %}{% if useNewBrand %} is-rebrand{% endif %}">
    <head>
        <title>{% block title %}{{ title }} | {% endblock %}{{ globalCopy.brand.title }}</title>

        {% include "includes/metadata.njk" %}
        {% include "includes/metaHead.njk" %}
        {% block extraHead %}{% endblock %}
    </head>
    <body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
        {{ accessibilityNav() }}

        <div class="global-container">

            {# Status banner #}
            {% if useNewBrand %}
                <div class="status-banner">
                    ✋ You are previewing The National Lottery Community Fund branding. Please do not share this page.
                    <a href="/tools/rebrand/off">Revert to Big Lottery Fund branding</a>
                </div>
            {% elseif previewStatus.isDraftOrVersion %}
                <div class="status-banner">
                    ✋ You are viewing a draft (last updated {{ previewStatus.lastUpdated }}).
                    Please do not share this page. <a href="{{ getCurrentUrl() }}">View original</a>
                </div>
            {% elseif appData.isNotProduction and not appData.isDev %}
                <div class="status-banner">
                    ✋ This is a test environment.
                    <a href="https://{{ appData.config.get('siteDomain') }}{{ getCurrentUrl() }}">View this page on the live site</a>
                </div>
            {% endif %}

            {# Cookie consent #}
            {% set cookieLang = __('global.cookieConsent') %}
            <div id="js-cookie-consent">
                <cookie-consent
                    title='{{ cookieLang.title }}'
                    message='{{ cookieLang.message }}'
                    action='{{ cookieLang.action }}'
                />
            </div>

            {% if useNewBrand %}
                {% include "includes/global-header-next.njk" %}
            {% else %}
                {% include "includes/header.njk" %}
            {% endif %}

            {% block content %}{% endblock %}

            {% include "includes/footer.njk" %}
        </div>

        {% if not useNewBrand %}
            {% include "includes/offscreenNav.njk" %}
        {% endif %}

        {%- if enablePrompt -%}
            <div id="js-active-prompt">
                <prompt
                    id='chalkmark'
                    weight='0.6'
                    message='We are working on improving the website.'
                    link-url='https://54kuc315.optimalworkshop.com/chalkmark/1unv0cq5'
                    link-text='Can you spare a few minutes to take a survey?'
                />
            </div>
        {%- endif -%}

        {% include "includes/metaFooterJS.njk" %}
    </body>
</html>
