{% set useNewHeader = appData.isNotProduction and queryFeature('use-new-header') %}
{% from "components/accessibility.njk" import accessibilityNav with context %}
{% from "components/preview.njk" import previewBanner with context %}
<!doctype html>
<html lang="{{ locale }}"
    class="no-js locale--{{ locale }}{% if isHighContrast %} contrast--high{% endif %}">
    <head>
        <title>{% block title %}{{ title }} | {% endblock %}{{ __("global.brand.title") }}</title>

        {% include "includes/metadata.njk" %}
        {% include "includes/metaHead.njk" %}
    </head>
    <body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
        {{ accessibilityNav() }}

        <div class="global-container">
            {{ previewBanner(previewStatus) }}

            {# Cookie consent #}
            {% if appData.isNotProduction %}
                <div id="js-cookie-consent"
                    data-lang='{{ __('global.cookieConsent') | dump | safe }}'></div>
            {% endif %}

            {% if useNewHeader %}
                {% include "includes/global-header-next.njk" %}
            {% else %}
                {% include "includes/header.njk" %}
            {% endif %}

            {% block content %}{% endblock %}

            {% include "includes/footer.njk" %}
        </div>

        {% if not useNewHeader %}
            {% include "includes/offscreenNav.njk" %}
        {% endif %}

        {%- if appData.config.get('features.enablePrompt') -%}
            <div id="js-active-prompt">
                <prompt
                    id='chalkmark'
                    weight='0.6'
                    message='We are working on improving the website.'
                    link-url='https://54kuc315.optimalworkshop.com/chalkmark/1unv0cq5'
                    link-text='Can you spare a few minutes to take a survey?'
                />
            </div>
        {%- endif -%}

        {% include "includes/metaFooterJS.njk" %}
    </body>
</html>
