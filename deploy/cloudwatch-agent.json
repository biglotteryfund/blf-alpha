{
  "agent": {
    "run_as_user": "root"
  },
  "metrics": {
    "metrics_collected": {
      "mem": {
        "measurement": ["mem_used_percent"]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "/tnlcf/APP_ENV/nginx/error",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "/tnlcf/APP_ENV/nginx/access",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/clamav/clamav.log",
            "log_group_name": "/tnlcf/APP_ENV/clamav/clamd",
            "log_stream_name": "{instance_id}"
          }
        ]
      }
    }
  }
}
